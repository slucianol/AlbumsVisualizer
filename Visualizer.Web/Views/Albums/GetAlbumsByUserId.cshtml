@model IEnumerable<Visualizer.Web.Models.AlbumModel>

@{
    ViewData["Title"] = "List of albums for user";
}

<h1>List all albums for user</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AlbumId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AlbumId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.ActionLink("Visualizar Album", "Index", "Photos", new {  albumId = item.AlbumId })
            </td>
        </tr>
}
    </tbody>
</table>
